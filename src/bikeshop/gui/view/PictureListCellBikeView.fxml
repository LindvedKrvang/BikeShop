<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bikeshop.gui.controller.PictureListCellBikeViewController">
   <center>
      <GridPane hgap="2.0" vgap="2.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Type:" />
            <Label text="Name of seller:" GridPane.rowIndex="1" />
            <Label text="Price:" GridPane.rowIndex="2" />
            <Label fx:id="lblBikeType" text="City Bike" GridPane.columnIndex="1" />
            <Label fx:id="lblBikeSeller" text="Daisy Duck" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="lblBikePrice" text="250,-" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
   <right>
      <ImageView fx:id="image" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../../assets/images/bikeImage.jpg" />
         </image>
      </ImageView>
   </right>
   <styleClass>
      <String fx:value="drawBorder" />
      <String fx:value="colorBackground" />
      <String fx:value="padding" />
   </styleClass>
</BorderPane>
